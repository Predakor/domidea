---
import { Image } from "astro:assets";

import ImageLeft from "@images/landing/section-2.1.jpg";
import ImageRight from "@images/landing/section-2.2.jpg";

const imageClasses = `object-cover h-full mask-alpha -z-10`;
const headingClasses = `top-1/2 lg:static absolute px-4 font-normal text-3xl lg:text-5xl`;
---

<section
  id="about"
  class="relative flex lg:flex-row flex-col-reverse gap-0 px-0 section"
>
  <div class="relative flex flex-col lg:flex-col-reverse lg:w-1/2">
    <h2 class=`${headingClasses} lg:mb-32 text-end`>
      By <strong>stworzyć dom</strong> który
      <br />
      będzie <strong>naprawde twój</strong>
    </h2>
    <Image
      class={`${imageClasses} not-lg:mask-b-from-0% lg:mask-t-from-0%`}
      src={ImageLeft}
      alt={"hero"}
      role={"presentation"}
      loading="eager"
    />
  </div>

  <div
    class="top-1/2 absolute grid grid-rows-2 backdrop-blur-xs w-full mobile-only"
  >
    <p class="text-3xl text-center">
      Od pierwszego <strong class="font-bold text-3xl">szkicu</strong>
    </p>
    <p class="text-3xl text-center">
      po ostatni <strong class="font-bold text-3xl">detal</strong>
    </p>
  </div>

  <div class="relative flex flex-col lg:w-1/2">
    <h2 class=`${headingClasses} lg:mt-32`>
      <strong>Prowadzimy Cię</strong> przez
      <br />
      cały <strong>proces projektowy</strong>
    </h2>

    <Image
      class={`${imageClasses} not-lg:mask-t-from-0% lg:mask-b-from-0% -z-10`}
      src={ImageRight}
      alt={"hero"}
      role={"presentation"}
      loading="eager"
    />
  </div>

  <div
    class="top-1/3 left-1/4 absolute inset-0 bg-base-300/15 backdrop-blur-[2px] py-8 rounded w-1/2 h-fit desktop-only"
  >
    <div class="gap-x-2 lg:grid lg:grid-cols-2">
      <span class="text-end">
        <p class="text-3xl">Od pierwszego</p>
        <p class="text-3xl">po ostatni</p>
      </span>
      <span class="text-start">
        <p class="font-bold text-base-100 text-3xl">szkicu</p>
        <p class="font-bold text-base-100 text-3xl">detal</p>
      </span>
    </div>
  </div>
</section>
