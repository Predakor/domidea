---
import Stack from "@components/Layout/Stack.astro";
import { Image } from "astro:assets";

import ImageLeft from "@images/landing/section-2.1.jpg";
import ImageRight from "@images/landing/section-2.2.jpg";

const imageMask = "";
---

<section class="relative flex lg:flex-row gap-x-0 px-0 section">
  <Stack direction="colReverse" class="relative lg:w-1/2">
    <h2 class="lg:mb-32 px-4 font-normal text-2xl lg:text-5xl text-end">
      By <strong>stworzyć dom</strong> który
      <br />
      będzie <strong>naprawde twój</strong>
    </h2>
    <Image
      class={`object-cover h-full mask-alpha mask-t-from-0% -z-20`}
      src={ImageLeft}
      alt={"hero"}
      role={"presentation"}
      loading="eager"
    />
  </Stack>

  <Stack class="group lg:flex-col lg:w-1/2">
    <h2 class="lg:mt-32 px-4 font-normal text-2xl lg:text-5xl">
      <strong>Prowadzimy Cię</strong> przez
      <br />
      cały <strong>proces projektowy</strong>
    </h2>

    <Image
      class={`object-cover h-full mask-alpha mask-b-from-0% -z-10`}
      src={ImageRight}
      alt={"hero"}
      role={"presentation"}
      loading="eager"
    />
  </Stack>

  <div
    class="top-1/3 left-1/4 absolute inset-0 bg-base-300/15 backdrop-blur-[2px] py-8 rounded w-1/2 h-fit desktop-only"
  >
    <div class="gap-x-2 lg:grid lg:grid-cols-2">
      <span class="text-end">
        <p class="text-3xl">Od pierwszego</p>
        <p class="text-3xl">po ostatni</p>
      </span>
      <span class="text-start">
        <p class="font-bold text-base-100 text-3xl">szkicu</p>
        <p class="font-bold text-base-100 text-3xl">detal</p>
      </span>
    </div>
  </div>
</section>
