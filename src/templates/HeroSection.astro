---
export interface Props {
  title?: string;
  description?: string;
  class?: string;
}
const { title, description, class: styles = "" } = Astro.props;
---

<section id="home" class={`flex min-h-svh section ${styles}`}>
  {title && <h1>{title}</h1>}
  {description && <blockquote class="prose prose-xl">{description}</blockquote>}
  <slot />
</section>
